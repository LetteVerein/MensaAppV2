                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/blueroundedcornersonlytop"
                android:gravity="center_horizontal"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="Dessert"
                android:textColor="@color/primary_text_default_material_dark"
                android:textSize="21sp" />

            <LinearLayout
                android:id="@+id/dessert"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dessertTitel"
                android:background="@drawable/roundedcornersonlybottom"
                android:orientation="vertical"
                android:padding="10dp" >
            </LinearLayout>
        </RelativeLayout>

        <!-- Diatspeiseplan -->

        <RelativeLayout
            android:id="@+id/diätVorspeisenWrap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/roundedcorners"
            android:padding="1dp"
            android:visibility="gone" >

            <TextView
                android:id="@+id/diätVorspeisenTitel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/greenroundedcornersonlytop"
                android:gravity="center_horizontal"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="Diät Vorspeisen"
                android:textColor="@color/primary_text_default_material_dark"
                android:textSize="21sp" />

            <LinearLayout
                android:id="@+id/diätVorspeisen"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/diätVorspeisenTitel"
                android:background="@drawable/roundedcornersonlybottom"
                android:orientation="vertical"
                android:padding="10dp" >
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
