<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/roundedcorners"
            android:padding="1dp" >

            <TextView
                android:id="@+id/vorspeisenTitel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/blueroundedcornersonlytop"
                android:gravity="center_horizontal"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="Vorspeisen"
                android:textColor="@color/primary_text_default_material_dark"
                android:textSize="21sp" />

            <LinearLayout
                android:id="@+id/vorspeisen"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vorspeisenTitel"
                android:background="@drawable/roundedcornersonlybottom"
                android:orientation="vertical"
                android:padding="10dp" >
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/roundedcorners"
            android:padding="1dp" >

            <TextView
                android:id="@+id/hauptspeisenTitel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/blueroundedcornersonlytop"
                android:gravity="center_horizontal"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="Leichte Vollkost"
                android:textColor="@color/primary_text_default_material_dark"
                android:textSize="21sp" />

            <LinearLayout
                android:id="@+id/hauptspeisen"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hauptspeisenTitel"
                android:background="@drawable/roundedcornersonlybottom"
                android:orientation="vertical"
                android:padding="10dp" >
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/roundedcorners"
            android:padding="1dp" >

            <TextView
                android:id="@+id/gemüsetellerTitel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/blueroundedcornersonlytop"
                android:gravity="center_horizontal"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="Gemüseteller"
                android:textColor="@color/primary_text_default_material_dark"
                android:textSize="21sp" />

            <LinearLayout
                android:id="@+id/gemüseteller"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/gemüsetellerTitel"
                android:background="@drawable/roundedcornersonlybottom"
                android:orientation="vertical"
                android:padding="10dp" >
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/roundedcorners"
            android:padding="1dp" >

            <TextView
                android:id="@+id/dessertTitel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/blueroundedcornersonlytop"
                android:gravity="center_horizontal"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="Dessert"
                android:textColor="@color/primary_text_default_material_dark"
                android:textSize="21sp" />

            <LinearLayout
                android:id="@+id/dessert"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dessertTitel"
                android:background="@drawable/roundedcornersonlybottom"
                android:orientation="vertical"
                android:padding="10dp" >
            </LinearLayout>
        </RelativeLayout>

        <!-- Diatspeiseplan -->

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/roundedcorners"
            android:padding="1dp" >

            <TextView
                android:id="@+id/diätvorspeisenTitel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/greenroundedcornersonlytop"
                android:gravity="center_horizontal"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="Diät Vorspeisen"
                android:textColor="@color/primary_text_default_material_dark"
                android:textSize="21sp" />

            <LinearLayout
                android:id="@+id/diätvorspeisen"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/diätvorspeisenTitel"
                android:background="@drawable/roundedcornersonlybottom"
                android:orientation="vertical"
                android:padding="10dp" >
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/roundedcorners"
            android:padding="1dp" >

            <TextView
                android:id="@+id/diätVegetarischTitel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/greenroundedcornersonlytop"
                android:gravity="center_horizontal"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="Vegetarisch"
                android:textColor="@color/primary_text_default_material_dark"
                android:textSize="21sp" />

            <LinearLayout
                android:id="@+id/diätVegetarisch"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/diätVegetarischTitel"
                android:background="@drawable/roundedcornersonlybottom"
                android:orientation="vertical"
                android:padding="10dp" >
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/roundedcorners"
            android:padding="1dp" >

            <TextView
                android:id="@+id/diätVollkostTitel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/greenroundedcornersonlytop"
                android:gravity="center_horizontal"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="Diät Vollkost"
                android:textColor="@color/primary_text_default_material_dark"
                android:textSize="21sp" />

            <LinearLayout
                android:id="@+id/diätVollkost"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/diätVollkostTitel"
                android:background="@drawable/roundedcornersonlybottom"
                android:orientation="vertical"
                android:padding="10dp" >
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/roundedcorners"
            android:padding="1dp" >

            <TextView
                android:id="@+id/diätBeilagenTitel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/greenroundedcornersonlytop"
                android:gravity="center_horizontal"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="Diät Beilagen"
                android:textColor="@color/primary_text_default_material_dark"
                android:textSize="21sp" />

            <LinearLayout
                android:id="@+id/diätBeilagen"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/diätBeilagenTitel"
                android:background="@drawable/roundedcornersonlybottom"
                android:orientation="vertical"
                android:padding="10dp" >
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/roundedcorners"
            android:padding="1dp" >

            <TextView
                android:id="@+id/diätDessertTitel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/greenroundedcornersonlytop"
                android:gravity="center_horizontal"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="Diät Dessert"
                android:textColor="@color/primary_text_default_material_dark"
                android:textSize="21sp" />

            <LinearLayout
                android:id="@+id/diätDessert"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/diätDessertTitel"
                android:background="@drawable/roundedcornersonlybottom"
                android:orientation="vertical"
                android:padding="10dp" >
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</ScrollView>