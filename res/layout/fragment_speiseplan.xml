                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/gemüsetellerTitel"
                android:background="@drawable/roundedcornersonlybottom"
                android:orientation="vertical"
                android:padding="10dp" >
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/diätDessertWrap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/roundedcorners"
            android:padding="1dp"
            android:visibility="gone" >

            <TextView
                android:id="@+id/diätDessertTitel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/greenroundedcornersonlytop"
                android:gravity="center_horizontal"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="Diät Dessert"
                android:textColor="@color/primary_text_default_material_dark"
                android:textSize="21sp" />

            <LinearLayout
                android:id="@+id/diätDessert"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/diätDessertTitel"
                android:background="@drawable/roundedcornersonlybottom"
                android:orientation="vertical"
                android:padding="10dp" >
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</ScrollView>