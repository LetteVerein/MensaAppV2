                android:layout_below="@+id/diätVollkostTitel"
                android:background="@drawable/roundedcornersonlybottom"
                android:orientation="vertical"
                android:padding="10dp" >
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/gemüsetellerWrap"
            android:layout_width="wrap_content"
